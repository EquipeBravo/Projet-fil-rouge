{% extends 'AppBundle:admin:layout/layout.html.twig' %}

{% block body %}

    {% for club in clubs %}
        <div class="panel frame">
            <div class="panel-heading frame-title">
                <h1>{{ club.title }}</h1>
            </div>
            <div class="panel-body frame-body text-justify">
                {{ club.clubcontent| raw }}
            </div>
            <hr>
            <div class="frame-footer">
                <ul class="list-inline pull-right">
                    <li title="modifier">
                        <a href="{{ path('app_admin_club_edit', { 'id': club.id }) }}" class="btn btn-sm btn-warning">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </li>
                    <li title="suprimer">
                            <a href="{{ path('club_delete', { 'id': club.id }) }}" class="btn btn-sm btn-danger">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                    </li>
                </ul>
            </div>
        </div>

    {% endfor %}
    <ul class="list-inline">
        <li>
            <a href="{{ path('club_new') }}" class="btn btn-sm btn-success">Nouvelle information</a>
        </li>
    </ul>

{% endblock %}
