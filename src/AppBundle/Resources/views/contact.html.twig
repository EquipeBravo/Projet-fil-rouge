{% extends('AppBundle:Layout:layout.html.twig') %}

{% block article %}
    {{ parent() }}
    <h1>Contact</h1>
    <div class="col-sm-6">
        <div class="well event-box">
            <h3>Secrétariat</h3>
            <p>
                42 Rue Nicolas Appert
                44 000 Nantes
            </p>
            <p>
                Lundi : 14H00 - 17H15
                Jeudi : 16H00 - 18H15
            </p>
            <p>
                Tél. Fixe : 02.51.84.91.55
                Tél. Mobile : 06.52.96.76.65
            </p>

            <h3>Adresse de la Salle</h3>

            <p>
                44 Rue Chanteclerc
                44 300 Nantes
            </p>

            <p>
                Tél. Salle : 02.40.76.54.59
            </p>

        </div>
    </div>
    <div class="col-sm-6">
        <div class="well event-box">
            <h3>Nous contacter</h3>
            {{ form_start(form) }}

            <div>
                {{ form_widget(form.subject) }}
                {{ form_errors(form.subject) }}
            </div>
            <p></p>
            <div>
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>
            <p></p>
            <div>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <p></p>
            <div>
                {{ form_widget(form.message) }}
                {{ form_errors(form.message) }}
            </div>

            {# Render CSRF token etc .#}
            <div style="display:none">
                {{ form_rest(form) }}
            </div>
            <p></p>
            <input class="btn btn-sm btn-success" type="submit" value="Valider">

            {{ form_end(form) }}

        </div>
    </div>

    <section class="row padding-bottom" id="stuff-list">
        <div class="col-sm-12">
            <h2>Personnel du Club</h2>
            <table class="table table-striped table-bordered table-responsive">
                <tr>
                    <th>Post</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                </tr>

                {% for persons in roles %}
                    {% set index = loop.index0 %}
                    {% if persons %}
                        {% for person in persons %}
                            <tr>
                                <th>{{ roleNames[index]}}</th>
                                <td>{{ person.lastName |capitalize }} {{ person.firstName| capitalize }}</td>
                                <td>{{ person.email }}</td>
                                <td>{{ person.phone }}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </table>
        </div>

    </section>
{% endblock %}