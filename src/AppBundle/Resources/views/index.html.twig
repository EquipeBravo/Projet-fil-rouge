	</div>

    {% for event in events %}

        {% if loop.index0 % 3 == 0 %}
			<div class="row">
        {% endif %}
		<div class="col-sm-4">
			<div class="well event-box">
				<h2 class="event-title">{{ event.title }}</h2>
				<p class="event-date">{{ event.dateEvent|date("h:i:M") }}</p>
			</div>
		</div>
        {% if loop.index0 % 3 == 2 %}
			</div>
        {% endif %}

    {% else %}

		<div>
			<p>No events</p>
		</div>

    {% endfor %}

    {#
