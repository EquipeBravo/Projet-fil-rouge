{% extends 'AppBundle:Layout:layout.html.twig' %}

{% block article %}

    <div class="row ">
        <form id="searchForm" action='/search' class="col-xs-12 ">
            <div class="input-group">
                <input name="keyword" type="text" class="form-control"
                       placeholder="Chercher un évènement, une équipe, un match ...">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <section>
        {% if search is defined %}
            <h2>Résultats pour la recherche "{{ keyword }}"</h2>

            <div class="col-sm-12">
            <div class="well event-box">

            {% for event in events %}

                {% if event.team is defined %}
                    <a href="{{ path('app_teams_show', { 'id': event.id }) }}">
                        <h4 class="event-title">{{ event.title }}</h4>
                    </a>
                {% elseif event.match is defined %}
                    <a href="{{ path('app_match_show', { 'id': event.id }) }}">
                        <h4 class="event-title">{{ event.title }}</h4>
                    </a>
                {% else %}
                    <a href="{{ path('app_event_show', { 'id': event.id }) }}">
                        <h4 class="event-title">{{ event.title }}</h4>
                    </a>
                {% endif %}

                {% if event.team is defined %}
                    <p class="event-date">Le {{ event.dateEvent }}</p>
                {% else %}
                    <p class="event-date">Le {{ event.dateEvent|date("d/m/Y \\à H\\hi") }}</p>
                {% endif %}

                {% if is_granted('ROLE_MANAGER') %}
                    {% if event.team is defined %}
                        <a href="{{ path('manager_teams_edit', { 'id': event.id }) }}"><span
                                    class="glyphicon glyphicon-pencil"></span></a>
                        <a href="{{ path('manager_teams_delete', { 'id': event.id }) }}"><span
                                    class="glyphicon glyphicon-trash"></span></a>

                    {% elseif event.match is defined %}
                        <a href="{{ path('manager_matchs_edit', { 'id': event.id }) }}"><span
                                    class="glyphicon glyphicon-pencil"></span></a>
                        <a href="{{ path('manager_matchs_delete', { 'id': event.id }) }}"><span
                                    class="glyphicon glyphicon-trash"></span></a>
                    {% else %}
                        <a href="{{ path('manager_event_edit', { 'id': event.id }) }}"><span
                                    class="glyphicon glyphicon-pencil"></span></a>
                        <a href="{{ path('manager_event_delete', { 'id': event.id }) }}"><span
                                    class="glyphicon glyphicon-trash"></span></a>
                    {% endif %}
                {% endif %}
            {% else %}
                </div>
                </div>
                <div>
                    <p>Aucun évènement ne correspond à votre recherche</p>
                </div>

            {% endfor %}
        {% else %}
            <h2>Evènements</h2>

            {% for event in events %}

                {% if loop.index0 % 3 == 0 %}
                    <div class="row">
                {% endif %}

                <div class="col-sm-4">
                    <div class="well event-box">
                        <div class="event-body">
                            <a href="{{ path('app_event_show', { 'id': event.id }) }}">
                                <h4 class="event-title">{{ event.title }}</h4>
                            </a>
                            <p class="event-date">Le {{ event.dateEvent|date("d/m/Y \\à H\\hi") }}</p>
                        </div>

                        {% if is_granted('ROLE_MANAGER') %}
                            <div class="padding event-footer">
                                <ul class="list-inline icons pull-right">
                                    <li title="modifier" data-toggle="tooltip">
                                        <a href="{{ path('manager_event_edit', { 'id': event.id }) }}" class="icon">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                    </li>
                                    <li title="supprimer" data-toggle="tooltip">
                                        <a href="{{ path('manager_event_delete', { 'id': event.id }) }}" class="icon">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        {% endif %}
                    </div>
                </div>
                {% if (loop.index0 % 3 == 2) or (loop.last) %}
                    </div>
                {% endif %}

            {% else %}

                <div>
                    <p>Aucun évènement ne correspond à votre recherche</p>
                </div>

            {% endfor %}

        {% endif %}

    </section>
{% endblock %}