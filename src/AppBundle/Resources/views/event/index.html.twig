{% extends 'AppBundle:admin:layout/layout.html.twig' %}

{% block body %}
    <h1>Les évènements du handball</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom de l'évènement</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>
                    <a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.title }}</a>
                </td>
                <td>{% if event.dateEvent %}{{ event.dateEvent|date('Y-m-d H:i') }}{% endif %}</td>
                <td>
                    <ul class="list-inline">
                        <li title="details" >
                            <a href="{{ path('event_show', { 'id': event.id }) }}" class="btn btn-sm btn-info">
                                <span class="glyphicon glyphicon-info-sign"></span>
                            </a>
                        </li>
                        <li title="modifier" >
                            <a href="{{ path('event_edit', { 'id': event.id }) }}" class="btn btn-sm btn-warning">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </li>
                        <li title="suprimer">
                            <a href="{{ path('event_delete', { 'id': event.id }) }}" class="btn btn-sm btn-danger">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('event_new') }}" class="btn btn-sm btn-success">Nouvel évènement</a>
        </li>
    </ul>
{% endblock %}
