{% extends 'AppBundle:Layout:layout.html.twig' %}

{% block body %}
    <h1>Les équipes</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nom de l'équipe</th>
            <th>Date de reprise</th>
            <th>Jour d'entrainement</th>
            <th>Horaire d'entrainement</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.name }}</td>
                <td>
                    {% if team.resumptionDate %}{{ team.resumptionDate|date('Y-m-d H:i') }}{% endif %}
                </td>
                <td>{{ team.trainingDay }}</td>
                <td>{{ team.trainingTime }}</td>
                <td>
                    <ul class="list-inline">
                        <li title="détails">
                            <a href="{{ path('app_category_team_details', {'id': team.category.id, 'team_id': team.id }) }}" class="btn btn-sm btn-succes">
                                <span class="glyphicon glyphicon-info-sign"></span>
                            </a>
                        </li>
                        <li title="Galerie">
                            <a href="{{ path('app_teams_gallery', { 'id': team.id }) }}" class="btn btn-sm btn-succes">
                                <span class="glyphicon glyphicon-picture"></span>
                            </a>
                        </li>
                        {% if is_granted('ROLE_MANAGER') %}
                            <li>
                                <a href="{{ path('manager_teams_edit', { 'id': team.id }) }}"><span
                                            class="glyphicon glyphicon-pencil"></span></a>
                            </li>
                            <li>
                                <a href="{{ path('manager_teams_delete', { 'id': team.id }) }}"><span
                                            class="glyphicon glyphicon-trash"></span></a>
                            </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
