{% extends 'AppBundle:Layout:layout.html.twig' %}

{% block body %}
    <h1>Evènement</h1>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Nom de l'évènement</th>
            <td>{{ event.title }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{% if event.dateEvent %}{{ event.dateEvent|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('app_homepage') }}" class="btn btn-sm btn-default">Retour à l'accueil</a>
        </li>
    </ul>
{% endblock %}
