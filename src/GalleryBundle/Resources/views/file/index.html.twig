{% extends 'AppBundle:admin:layout/layout.html.twig' %}
{% block body %}
    <h1>Liste des fichiers</h1>

    <table>
        <thead>
            <tr>
                <th>Nom du fichier</th>
                <th>Photo</th>
                <th>Type</th>
                <th>Alt</th>
                <th>Date de téléchargement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td>{{ file.name }}</td>
                <td class="padding"><img width="25%" height="25%" src="{{ asset('uploads/images/'~ file.files)  }}" /></td>
                <td>{{ file.type }}</td>
                <td>{{ file.alt }}</td>
                <td>{% if file.uploadDate %}{{ file.uploadDate|date('Y-m-d H:i') }}{% endif %}</td>
                <td>
                    <ul class="list-inline">
                        <li title="détails">
                            <a href="{{ path('file_show', { 'id': file.id }) }}" class="btn btn-sm btn-info">
                                <span class="glyphicon glyphicon-info-sign"></span>
                            </a>
                        </li>
                        <li title="modifier">
                            <a href="{{ path('file_edit', { 'id': file.id }) }}" class="btn btn-sm btn-warning">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('event_new') }}" class="btn btn-sm btn-success">Créer un nouveau fichier</a>
        </li>
    </ul>
{% endblock %}
