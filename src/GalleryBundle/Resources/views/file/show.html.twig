{% extends 'AppBundle:Layout:layout.html.twig' %}
{% block body %}
    <h1>File</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ file.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ file.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ file.path }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ file.type }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ file.alt }}</td>
            </tr>
            <tr>
                <th>Uploaddate</th>
                <td>{% if file.uploadDate %}{{ file.uploadDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('file_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('file_edit', { 'id': file.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
