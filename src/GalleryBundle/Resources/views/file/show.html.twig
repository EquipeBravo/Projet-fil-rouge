{% extends 'AppBundle:admin:layout/layout.html.twig' %}
{% block body %}
    <h1>Détails</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom du fichier</th>
                <td>{{ file.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ file.type }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ file.alt }}</td>
            </tr>
            <tr>
                <th>Date de mise en ligne</th>
                <td>
                    {% if file.uploadDate %}{{ file.uploadDate|date('Y-m-d H:i') }}{% endif %}
                </td>
            </tr>
            <tr>
                <img src="{{ asset('uploads/images/'~ file.files) }}" />
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li class="btn btn-default">
            <a href="{{ path('file_index') }}">Retour à la liste</a>
        </li>
        <li class="btn btn-warning">
            <a href="{{ path('file_edit', { 'id': file.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer"  class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
