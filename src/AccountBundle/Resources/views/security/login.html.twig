{% extends('AppBundle:Layout:layout.html.twig') %}

{% block body %}

<h1>Connexion au site</h1>
    {% if error %}
		<div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
		</div>
    {% endif %}

	<form class="form-horizontal" action="{{ path('app_login') }}" method="post">
		<div class="form-group">
			<label class="control-label col-sm-2" for="email">Email:</label>
			<div class="col-sm-10">
				<input type="email" class="form-control" id="email" name="_username"  placeholder="Enter email" value="">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="pwd">Mot de passe:</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" id="pwd" name="_password" placeholder="Enter password">
			</div>
		</div>
		<!--<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label><input type="checkbox"> Se souvenir de moi</label>
				</div>
			</div>
		</div>
		-->
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-success">Valider</button>
			</div>
		</div>
	</form>

{% endblock %}