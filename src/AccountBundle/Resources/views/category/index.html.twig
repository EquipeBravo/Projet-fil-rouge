{% extends 'AppBundle:Layout:layout.html.twig' %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            {# A masquer/afficher en fonction des droits #}
            <a href="{{ path('category_new') }}">Nouvelle catégorie</a> 
        </li>
    </ul>
{% endblock %}
