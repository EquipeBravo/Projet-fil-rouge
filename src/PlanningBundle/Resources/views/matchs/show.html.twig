{% extends 'AppBundle:admin:layout/layout.html.twig' %}

{% block body %}
    <h1>Match</h1>

    <table>
        <tbody>
            <tr>
                <th>Date du match</th>
                <td>{% if match.dateMatch %}{{ match.dateMatch|date('Y-m-d H:i') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Domicile</th>
                <td>{% if match.domicile %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Lieu de rencontre</th>
                <td>{{ match.place }}</td>
            </tr>
            <tr>
                <th>Equipe</th>
                <td>{{ match.team }}</td>
            </tr>
            <tr>
                <th>Equipe adverse</th>
                <td>{{ match.team2 }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('matchs_index') }}" class="btn btn-sm btn-default">Retour Ã  la liste</a>
        </li>
        <li>
            <a href="{{ path('place_edit', { 'id': match.id }) }}" class="btn btn-sm btn-warning">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-sm btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
