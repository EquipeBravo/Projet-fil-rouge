{% extends 'AppBundle:admin:layout/layout.html.twig' %}
{% block body %}
    <h1>Les matchs</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date du match</th>
                <th>Domicile</th>
                <th>Lieu de rencontre</th>
                <th>Equipe</th>
                <th>Adversaires</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for match in matchs %}
            <tr>
                <td>{% if match.dateMatch %}{{ match.dateMatch|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if match.domicile %}Oui{% else %}Non{% endif %}</td>
                <td> {{ match.place }} </td>
                <td> {{ match.team }} </td>
                <td> {{ match.team2 }} </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('matchs_show', { 'id': match.id }) }}">d√©tails</a>
                        </li>
                        <li>
                            <a href="{{ path('matchs_edit', { 'id': match.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('matchs_new') }}">Nouveau match</a>
        </li>
    </ul>
{% endblock %}
